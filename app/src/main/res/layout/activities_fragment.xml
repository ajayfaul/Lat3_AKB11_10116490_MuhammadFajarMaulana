<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkerBackgrond"
    tools:context=".view.fragment.ActivitiesFragment">

    <LinearLayout
        android:id="@+id/friend_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="18dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/asap_bold"
            android:text="Friends List"
            android:textColor="@color/whitebg"
            android:textSize="22sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/friend_list_layout"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@+id/friend_title_layout">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/friend_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/daily_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/friend_list_layout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="18dp"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/asap_bold"
            android:text="Daily Activity"
            android:textColor="@color/whitebg"
            android:textSize="22sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/daily_activity_layout"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/daily_title_layout"
        android:layout_marginTop="10dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/daily_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
</RelativeLayout>